<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="card mt-6" style="margin: 40% 30%;">
        <div class="card-content">
          <div class="content">
            <h2 class="title is-2"> Welcome to the Chat</h2>
            <p class="content">Chat ma swagat chhe !</p>

            {{! Button }}
            <div class="buttons">
              {{! Register Button }}
              <form action="/register" class="registerButton" method="GET">
                <button
                  class="button is-primary is-outlined"
                  type="submit"
                  id="registerBtn"
                >
                  Register
                </button>
              </form>
              &nbsp; &nbsp;

              <form action="/login" class="loginButton" method="GET">
                <button
                  class="button is-link is-outlined"
                  type="submit"
                  id="loginBtn"
                >
                  Login
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>