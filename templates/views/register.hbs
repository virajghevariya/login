<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
  <link rel="stylesheet" href="style.css">
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  <title>Bulma</title>
</head>
<body>
    {{!-- {{>navbar}} --}}
  <div class="container">
    <div class="form">
      <div class="card mt-6 ml-5 mr-5" >
        <div class="card-content">
          <div class="content">
            <form action="/register" method="POST">
              <h1 class="title">Registration Form</h1>
              <!-- Name -->
              <div class="field mt-6">
                <label class="label" id="name">Name</label>
                <div class="control ">
                  <input type="text" class="input" name="name" placeholder="Name">
                </div>
              </div>
      
              <!-- Email -->
              <div class="field">
                <label class="label">Email</label>
                <div class="control has-icons-left">
                  <input type="email" class="input" name="email" placeholder="Email">
                  <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                  </span>
                </div>
              </div>
      
              <!-- Password -->
              <div class="field">
                <label class="label">Password</label>
                <div class="control has-icons-left">
                  <input type="password" class="input" name="password" placeholder="Password">
                  <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
              </div>
      
              <!-- Confirm Password -->
              <div class="field">
                <label class="label">Confirm Password</label>
                <div class="control has-icons-left">
                  <input type="password" class="input" name="confirmPassword" placeholder="Confirm Password">
                  <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
              </div>
      
              <!-- Checkbox -->
              <div class="field">
                <div class="control">
                  <label class="Checkbox">
                    <input type="checkbox" class="checkbox">
                    I agree to the <a href="#">terms & conditions</a>
                  </label>
                </div>
              </div>
      
              <!-- Button -->
              <div class="field is-grouped mt-5">
                <div class="control">
                  <button class="button is-link" type="submit" id="button" name="button">Submit</button>
                </div>
                <div class="control">
                  <button class="button is-light">Cancel</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</html>